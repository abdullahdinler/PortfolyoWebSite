@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12  d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.Title
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b> @item.Name @item.SurName</b></h2>
                                            <p class="text-muted text-sm"> @item.AboutTxt </p>
                                            <hr />
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <table class="table">
                                                    <tr>
                                                        <td>
                                                <li class="small"> Mail: @item.Mail</li></td>
                                                <td>
                                                <li class="small"> Telefon: @item.Phone</li></td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                <li class="small"> Doğum Tarihi:  @item.Birthday.Date.ToString("d")</li></td>
                                                <td>
                                                <li class="small"> Derece: @item.Degree</li></td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                <li class="small"> City: @item.City</li></td>
                                                <td>
                                                <li class="small"> Freelance: @item.Freelance</li></td>
                                                </tr>
                                                </table>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.Img" width="200px;" height="200px" alt="" class="rounded img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/About/Edit/@item.Id" class="btn btn-sm btn-outline-success"><i class="fas fa-user"></i> Profili düzenle</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>


<script>
    var startValue = "@((string)ViewBag.mssg)";
    if (startValue != null && startValue != "")
    {
      swal("", "Güncelleme başarılı bir şekilde gerçekleşti.", "success");
    }
</script>